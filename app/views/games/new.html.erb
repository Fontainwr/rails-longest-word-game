<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<h1>New Game</h1>

<p>Can you make a word out of these letters?</p>

<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<%= form_tag score_path, method: :post, data: { turbo: false } do %>
  <p>
    <%= label_tag :word, "Your word:" %>
    <%= text_field_tag :word %>
  </p>
  <%= hidden_field_tag :letters, @letters.join(' ') %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= submit_tag "Submit" %>
<% end %>
